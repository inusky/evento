generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  events    Event[]
}

model Event {
  id      String @id @default(uuid())
  title   String @unique
  content String

  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  status    Status   @default(pending)
  createdAt DateTime @default(now())
}

enum Status {
  pending
  completed
}
